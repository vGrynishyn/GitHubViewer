<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="#FFFFFF"
        android:id="@+id/LinLayout"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/project_name"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/reposNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="#FFFFFF"
            android:textStyle="bold"/> />
    </LinearLayout>

        <TextView
            android:id="@+id/reposDescriptionView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#FFFFFF"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="2dp"
            android:src="@android:drawable/ic_notification_overlay" />
        <TextView
            android:id="@+id/reposLangView"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="10dp"
            android:src="@android:drawable/btn_star" />
        <TextView
            android:id="@+id/reposForksView"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"/>
        <ImageView
            android:id="@+id/imageFork"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/fork" />
        <TextView
            android:id="@+id/reposStarsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="#FFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_date"
            android:background="#FFFFFF"/>
    <TextView
            android:id="@+id/reposUpdateDateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"/>
    </LinearLayout>

    </LinearLayout>